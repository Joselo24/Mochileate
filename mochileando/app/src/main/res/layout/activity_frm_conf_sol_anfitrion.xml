<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ben.dm.mochileando.frmConfSolAnfitrion"
    android:id="@+id/lyo_C">
    <LinearLayout
        android:id="@+id/lyoSol_2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        style="@style/Base.Theme.AppCompat.Light.DarkActionBar">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView_tab1"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center"  >

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="130dp"
                        android:id="@+id/imgFoto_C"
                        android:layout_weight="0.16"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnLlamar_C"
                        android:layout_marginRight="26dp"
                        android:layout_marginEnd="26dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/ico_llamar" />
                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Medium Text"
                        android:id="@+id/txtNombres_C"
                        android:layout_gravity="center_horizontal"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width = "100dp"
                        android:layout_height = "wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FF47C83C"
                        android:text = "Fecha Nac"
                        android:id="@+id/lbl_Pro"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Medium Text"
                        android:id="@+id/txtNacimiento_C"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width = "100dp"
                        android:layout_height = "wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FF47C83C"
                        android:text = "Sexo"
                        android:id="@+id/lbl_Sexo"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Medium Text"
                        android:id="@+id/txtSexo_C"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width = "100dp"
                        android:layout_height = "wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FF47C83C"
                        android:text = "Teléfono:"
                        android:id="@+id/lbl_telefono_usuario"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Medium Text"
                        android:id="@+id/txtCelular_C"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FF47C83C"
                        android:text="Correo:"
                        android:id="@+id/textView20"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Medium Text"
                        android:id="@+id/txtCorreo_C"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width = "100dp"
                        android:layout_height = "wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FF47C83C"
                        android:text = "Dirección: "
                        android:id="@+id/lbl_direccion_usuario"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Medium Text"
                        android:id="@+id/txtDireccion_C"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FF47C83C"
                        android:text="Provincia"
                        android:id="@+id/textView5"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Medium Text"
                        android:id="@+id/txtProvincia_C"
                        android:textSize="12dp" />
                </LinearLayout>



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#FF47C83C"
                        android:text="Descripción de sus habilidades"
                        android:id="@+id/textView2"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="46dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Medium Text"
                        android:id="@+id/txtHabilidades_C"
                        android:textSize="12dp" />
                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp">

                    <Button
                        style="@style/Base.Theme.AppCompat.Light.DarkActionBar"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="Confirmar"
                        android:id="@+id/btnConfirmar_C"
                        android:background="@drawable/botones_base_verde"
                        android:textColor="@drawable/botones_color_texto"
                        android:textSize="16dp"
                        android:layout_marginRight="10dp" />
                    <Button
                        style="@style/Base.Theme.AppCompat.Light.DarkActionBar"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="Rechazar"
                        android:id="@+id/btnRechazar_C"
                        android:background="@drawable/botones_base_verde"
                        android:textColor="@drawable/botones_color_texto"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp" />


                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>