<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ben.dm.mochileando.frmSolicitarViaje_1"
    android:id="@+id/lyoSol1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout6">

        <Spinner
            android:layout_width="250dp"
            android:layout_height="fill_parent"
            android:id="@+id/spnCiudad"
            android:layout_alignParentTop="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:id="@+id/btnBuscarPosada"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/spnCiudad"
            android:layout_toEndOf="@+id/spnCiudad"
            android:background="@drawable/bt_base" />
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/lstDisponibles"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout6"
        android:layout_marginTop="10dp" />

</RelativeLayout>
